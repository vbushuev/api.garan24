// out: forms.css main: co.impreza.styl
$garanDefault = rgba(0, 191, 128,1)
$garanSuccess = rgba(0, 191, 128,1)
$garanBlue = #33bbff//rgba(255,0,0,1)
$garanRed = #D50000//rgba(255,0,0,1)

$colorGreen = rgb(0, 191, 128)
$colorBlue = #33bbff
$colorGrey = rgb(103, 111, 124)
$colorLightGrey = rgb(242, 243, 245)
$fontColor = rgb(103, 111, 124)
input,select,textarea
    font-size 12pt;
.input-field
    padding 0
    position relative
    color $colorGrey
    input
        height 40px
        line-height 40px
        background-color $colorLightGrey
        padding-left 3em
        border-radius(5px)
        width 100%
        border solid 2px rgba(242, 243, 245,.73)
.input-field:before
    display block
    position absolute
    left 0
    top 0
    width 2em
    font-family 'FontAwesome'
    height 40px
    text-align center
    line-height 40px
    color $colorGrey
    font-size 14pt
    opacity .33
.input-field:focus
    border-color $colorGreen
    .input-field:before
        color $colorGreen
.input-field.default:before
    content '\f105'

.input-field.email:before
    content '\f0e0'
.input-field.phone:before
    content '\f095'
.input-field.external-link:before
    content '\f08e'
.input-field.file-text:before
    content '\f0f6'
.input-field.barcode:before
    content '\f02a'

.input-field.euro:before
    content '\f153'
.input-field.gbp:before
    content '\f154'
.input-field.usd:before
    content '\f155'
.input-field.rub:before
    content '\f158'
