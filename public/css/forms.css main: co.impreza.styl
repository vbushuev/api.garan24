input,
select,
textarea {
  font-size: 1.1em;
}
.input-field {
  padding: 0;
  position: relative;
  color: #676f7c;
}
.input-field input {
  height: 2em;
  line-height: 2em;
  background-color: #f2f3f5;
  padding-left: 3em;
  width: 100%;
  border: solid 2px rgba(242,243,245,0.73);
}
.input-field:before {
  display: block;
  position: absolute;
  left: 0;
  top: 0;
  width: 2em;
  font-family: 'FontAwesome';
  height: 2em;
  text-align: center;
  line-height: 2em;
  color: #676f7c;
  font-size: 1.2em;
  opacity: 0.33;
}
.input-field:focus {
  border-color: #00bf80;
}
.input-field:focus .input-field:before {
  color: #00bf80;
}
