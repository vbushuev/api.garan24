// main: co.impreza.styl
$colorGreen = rgb(0, 191, 128)
.scale-2
    width: 100%;
.scale-2-item
    position: relative;
    background-color: rgba(167,255,235 ,1);
    display: inline-block;
    width: 25%;
    text-align: center;
    height: 2em;
    line-height: 2em;
    border:none;
    font-size: 1em;
    color: rgba(0,0,0,.3);
    pointer-events: none;
.scale-2-item a
    color: rgba(0,0,0,.3);
    text-decoration: none;
.scale-2-item:after, .scale-2-item:before
    top: 50%;
    border: solid transparent;
    content: " ";
    height: 0;
    width: 0;
    position: absolute;
    pointer-events: none;
.scale-2-item:after
    border-color: transparent;
    border-left-color: rgba(167,255,235 ,1);
    border-width: 1em;
    margin-top: -1em;
    right: -2em;
    z-index: 200;
.scale-2-item:before
    border-color: transparent;
    border-left-color: rgba(255,255,255,1);
    border-width: 1em;
    z-index: 100;
    left:0;
    margin-top: -1em;
.scale-2-item:first-child:before
    border-left-color: rgba(167,255,235 ,1);
.scale-2-item:last-child:after
    //border-left-color: rgba(255,255,255,1);
    border-left-color: transparent;
.active.scale-2-item,.active-last.scale-2-item
    background-color: $colorGreen//#449d44
    color: rgba(255,255,255,1);
.active.scale-2-item a,.active-last.scale-2-item a
    color: rgba(255,255,255,1);
.active-last.scale-2-item
    pointer-events: all;
.active.scale-2-item,.active-last.scale-2-item a:hover
    font-weight: 700;
    text-transform: uppercase;
.active-last.scale-2-item:after,.active-last.scale-2-item:first-child:before,
.active.scale-2-item:after,.active.scale-2-item:first-child:before
    border-left-color: $colorGreen
.active.scale-2-item:last-child:after,
.active-last.scale-2-item:last-child:after
    border-left-color: transparent;
