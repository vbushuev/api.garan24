.helper
    display: inline-block;
    background-color: $colorGrey;
    color: rgba(255,255,255,.6);
    border-radius: (1em);
    min-width:2em;
    text-align: center;
    height: 2em;
    line-height: 2em;
    position: absolute;
    right: .5em;
    top: .5em;
    cursor:pointer;
    z-index: 100;
.helper:hover
    color: rgba(255,255,255,1);
    text-decoration: none;
.helper-text
    background-color: $colorGrey;
    color: rgba(255,255,255,1);
    position: absolute;
    top: 3em;
    right: 1em;
    padding: 1em;
    z-index: 100;
    border-radius: (.5em);
.helper-box
    display: none;
    position: fixed;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    background: rgba(0,0,0,0.3);
    //background-blur(5px);
